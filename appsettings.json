{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "AppName": "QR Code Profile Sharing",
    "Version": "1.0.0",
    "MaxProfiles": 1000,
    "QrCodeSize": 8,
    "Features": {
      "EnableEmailValidation": true,
      "EnableSocialProfiles": true,
      "EnableSearch": true
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=profiles.db"
  }
}
